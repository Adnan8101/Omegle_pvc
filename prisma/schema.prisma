generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuildSettings {
  id               String   @id @default(uuid())
  guildId          String   @unique
  interfaceVcId    String?
  interfaceTextId  String?
  commandChannelId String?
  logsChannelId    String?
  logsWebhookUrl   String?
  staffRoleId      String?
  adminStrictness  Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  privateChannels  PrivateVoiceChannel[]
  pendingRequests  PendingRenameRequest[]
  
  @@index([guildId])
}

model PendingRenameRequest {
  id          String   @id @default(uuid())
  guildId     String
  userId      String
  channelId   String
  newName     String
  messageId   String   @unique
  createdAt   DateTime @default(now())
  
  guild       GuildSettings @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  
  @@index([guildId])
  @@index([userId])
  @@index([messageId])
}

model PrivateVoiceChannel {
  id          String   @id @default(uuid())
  channelId   String   @unique
  guildId     String
  ownerId     String
  createdAt   DateTime @default(now())

  // -- STATE PERSISTENCE --
  isLocked         Boolean  @default(false)
  isHidden         Boolean  @default(false)
  userLimit        Int      @default(0)
  bitrate          Int      @default(64000)
  rtcRegion        String?
  videoQualityMode Int      @default(1)

  guild       GuildSettings @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  permissions VoicePermission[]

  @@index([guildId])
  @@index([ownerId])
  @@index([guildId, ownerId])
}

model VoicePermission {
  id         String   @id @default(uuid())
  channelId  String
  targetId   String
  targetType String
  permission String
  createdAt  DateTime @default(now())

  channel    PrivateVoiceChannel @relation(fields: [channelId], references: [channelId], onDelete: Cascade)

  @@unique([channelId, targetId])
  @@index([channelId])
  @@index([channelId, permission])
}

model StrictnessWhitelist {
  id         String   @id @default(uuid())
  guildId    String
  targetId   String
  targetType String
  createdAt  DateTime @default(now())

  @@unique([guildId, targetId])
  @@index([guildId])
}

model OwnerPermission {
  id         String   @id @default(uuid())
  guildId    String
  ownerId    String
  targetId   String
  targetType String
  createdAt  DateTime @default(now())

  @@unique([guildId, ownerId, targetId])
  @@index([guildId, ownerId])
}

model PvcOwner {
  id        String   @id @default(uuid())
  userId    String   @unique
  addedBy   String
  createdAt DateTime @default(now())

  @@index([userId])
}

model TeamVoiceSettings {
  id              String   @id @default(uuid())
  guildId         String   @unique
  categoryId      String?
  duoVcId         String?
  trioVcId        String?
  squadVcId       String?
  logsChannelId   String?
  logsWebhookUrl  String?
  commandChannelId String?
  adminStrictness Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  teamChannels    TeamVoiceChannel[]

  @@index([guildId])
}

enum TeamType {
  DUO
  TRIO
  SQUAD
}

model TeamVoiceChannel {
  id          String   @id @default(uuid())
  channelId   String   @unique
  guildId     String
  ownerId     String
  teamType    TeamType
  createdAt   DateTime @default(now())

  // -- STATE PERSISTENCE --
  isLocked         Boolean  @default(false)
  isHidden         Boolean  @default(false)
  userLimit        Int      @default(0)
  bitrate          Int      @default(64000)
  rtcRegion        String?
  videoQualityMode Int      @default(1)

  guild       TeamVoiceSettings @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  permissions TeamVoicePermission[]

  @@index([guildId])
  @@index([ownerId])
  @@index([guildId, ownerId])
}

model TeamVoicePermission {
  id         String   @id @default(uuid())
  channelId  String
  targetId   String
  targetType String
  permission String
  createdAt  DateTime @default(now())

  channel    TeamVoiceChannel @relation(fields: [channelId], references: [channelId], onDelete: Cascade)

  @@unique([channelId, targetId])
  @@index([channelId])
  @@index([channelId, permission])
}

model UserAccessGrant {
  id          String   @id @default(uuid())
  guildId     String
  ownerId     String
  targetId    String
  grantCount  Int      @default(1)
  lastGrantAt DateTime @default(now())
  suggested   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([guildId, ownerId, targetId])
  @@index([guildId, ownerId])
  @@index([guildId, ownerId, suggested])
}

model GlobalVCBlock {
  id        String   @id @default(uuid())
  guildId   String
  userId    String
  blockedBy String
  reason    String?
  createdAt DateTime @default(now())

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
  @@index([guildId, userId])
}

model WvAllowedRole {
  id        String   @id @default(uuid())
  guildId   String
  roleId    String
  addedBy   String
  createdAt DateTime @default(now())

  @@unique([guildId, roleId])
  @@index([guildId])
}

model CountingSettings {
  id           String   @id @default(uuid())
  guildId      String   @unique
  channelId    String
  enabled      Boolean  @default(true)
  currentCount Int      @default(0)
  lastUserId   String?  // To prevent same user counting twice
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([guildId])
  @@index([channelId])
}

model CountingUserStats {
  id        String   @id @default(uuid())
  guildId   String
  userId    String
  counting  Int      @default(0) // Total successful counts
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
  @@index([guildId, counting])
}

// =====================================
// GIVEAWAY SYSTEM MODELS
// =====================================

model Giveaway {
  id                    Int      @id @default(autoincrement())
  messageId             String   @unique
  channelId             String
  guildId               String
  hostId                String
  prize                 String
  winnersCount          Int
  endTime               BigInt   // Unix timestamp in milliseconds
  ended                 Boolean  @default(false)
  paused                Boolean  @default(false)
  pausedAt              BigInt?
  createdAt             BigInt

  // Requirements
  roleRequirement       String?
  inviteRequirement     Int      @default(0)
  accountAgeRequirement Int      @default(0)
  serverAgeRequirement  Int      @default(0)
  captchaRequirement    Boolean  @default(false)
  messageRequired       Int      @default(0)
  voiceRequirement      Int      @default(0)

  // Features
  customMessage         String?
  assignRole            String?
  winnerRole            String?
  thumbnail             String?
  emoji                 String   @default("ðŸŽ‰")
  increaseChance        String?  // 'role', 'booster', 'role_booster'
  increaseChanceRole    String?
  forcedWinners         String?  // Comma-separated user IDs for forced winners
  preCalculatedWinners  String?  // Pre-calculated winner IDs (comma-separated)
  winnersCalculatedAt   BigInt?  // When winners were pre-calculated

  participants          GiveawayParticipant[]
  winners               GiveawayWinner[]
  
  @@index([guildId])
  @@index([ended])
}

model GiveawayParticipant {
  id         Int      @id @default(autoincrement())
  giveawayId Int
  userId     String
  joinedAt   BigInt
  giveaway   Giveaway @relation(fields: [giveawayId], references: [id], onDelete: Cascade)

  @@index([giveawayId])
  @@index([userId])
}

model GiveawayWinner {
  id         Int      @id @default(autoincrement())
  giveawayId Int
  userId     String
  wonAt      BigInt
  giveaway   Giveaway @relation(fields: [giveawayId], references: [id], onDelete: Cascade)

  @@index([giveawayId])
}

model ScheduledGiveaway {
  id                    Int      @id @default(autoincrement())
  channelId             String
  guildId               String
  hostId                String
  prize                 String
  winnersCount          Int
  payload               String   // JSON string containing all options
  startTime             BigInt   // Unix timestamp in milliseconds
  createdAt             DateTime @default(now())

  @@index([guildId])
  @@index([startTime])
}

model GiveawayConfig {
  guildId     String @id
  managerRole String?
  prefix      String @default("!")
}

model GiveawayUserStats {
  id           Int    @id @default(autoincrement())
  guildId      String
  userId       String
  messageCount Int    @default(0)
  voiceMinutes Int    @default(0)
  inviteCount  Int    @default(0)

  @@unique([guildId, userId])
  @@index([guildId])
}

model GiveawayInviteTracker {
  id        Int      @id @default(autoincrement())
  guildId   String
  inviterId String
  inviteeId String
  code      String?
  createdAt DateTime @default(now())

  @@unique([guildId, inviteeId])
  @@index([guildId])
}

// =====================================
// END GIVEAWAY SYSTEM MODELS
// =====================================
