generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuildSettings {
  id               String   @id @default(uuid())
  guildId          String   @unique
  interfaceVcId    String?
  interfaceTextId  String?
  commandChannelId String?
  logsChannelId    String?
  logsWebhookUrl   String?
  staffRoleId      String?
  adminStrictness  Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  privateChannels  PrivateVoiceChannel[]
  pendingRequests  PendingRenameRequest[]
  
  @@index([guildId])
}

model PendingRenameRequest {
  id          String   @id @default(uuid())
  guildId     String
  userId      String
  channelId   String
  newName     String
  messageId   String   @unique
  createdAt   DateTime @default(now())
  
  guild       GuildSettings @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  
  @@index([guildId])
  @@index([userId])
  @@index([messageId])
}

model PrivateVoiceChannel {
  id          String   @id @default(uuid())
  channelId   String   @unique
  guildId     String
  ownerId     String
  createdAt   DateTime @default(now())

  // -- STATE PERSISTENCE --
  isLocked         Boolean  @default(false)
  isHidden         Boolean  @default(false)
  userLimit        Int      @default(0)
  bitrate          Int      @default(64000)
  rtcRegion        String?
  videoQualityMode Int      @default(1)

  guild       GuildSettings @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  permissions VoicePermission[]

  @@index([guildId])
  @@index([ownerId])
  @@index([guildId, ownerId])
}

model VoicePermission {
  id         String   @id @default(uuid())
  channelId  String
  targetId   String
  targetType String
  permission String
  createdAt  DateTime @default(now())

  channel    PrivateVoiceChannel @relation(fields: [channelId], references: [channelId], onDelete: Cascade)

  @@unique([channelId, targetId])
  @@index([channelId])
  @@index([channelId, permission])
}

model StrictnessWhitelist {
  id         String   @id @default(uuid())
  guildId    String
  targetId   String
  targetType String
  createdAt  DateTime @default(now())

  @@unique([guildId, targetId])
  @@index([guildId])
}

model OwnerPermission {
  id         String   @id @default(uuid())
  guildId    String
  ownerId    String
  targetId   String
  targetType String
  createdAt  DateTime @default(now())

  @@unique([guildId, ownerId, targetId])
  @@index([guildId, ownerId])
}

model PvcOwner {
  id        String   @id @default(uuid())
  userId    String   @unique
  addedBy   String
  createdAt DateTime @default(now())

  @@index([userId])
}

model TeamVoiceSettings {
  id              String   @id @default(uuid())
  guildId         String   @unique
  categoryId      String?
  duoVcId         String?
  trioVcId        String?
  squadVcId       String?
  logsChannelId   String?
  logsWebhookUrl  String?
  commandChannelId String?
  adminStrictness Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  teamChannels    TeamVoiceChannel[]

  @@index([guildId])
}

enum TeamType {
  DUO
  TRIO
  SQUAD
}

model TeamVoiceChannel {
  id          String   @id @default(uuid())
  channelId   String   @unique
  guildId     String
  ownerId     String
  teamType    TeamType
  createdAt   DateTime @default(now())

  // -- STATE PERSISTENCE --
  isLocked         Boolean  @default(false)
  isHidden         Boolean  @default(false)
  userLimit        Int      @default(0)
  bitrate          Int      @default(64000)
  rtcRegion        String?
  videoQualityMode Int      @default(1)

  guild       TeamVoiceSettings @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  permissions TeamVoicePermission[]

  @@index([guildId])
  @@index([ownerId])
  @@index([guildId, ownerId])
}

model TeamVoicePermission {
  id         String   @id @default(uuid())
  channelId  String
  targetId   String
  targetType String
  permission String
  createdAt  DateTime @default(now())

  channel    TeamVoiceChannel @relation(fields: [channelId], references: [channelId], onDelete: Cascade)

  @@unique([channelId, targetId])
  @@index([channelId])
  @@index([channelId, permission])
}

model UserAccessGrant {
  id          String   @id @default(uuid())
  guildId     String
  ownerId     String
  targetId    String
  grantCount  Int      @default(1)
  lastGrantAt DateTime @default(now())
  suggested   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([guildId, ownerId, targetId])
  @@index([guildId, ownerId])
  @@index([guildId, ownerId, suggested])
}

model GlobalVCBlock {
  id        String   @id @default(uuid())
  guildId   String
  userId    String
  blockedBy String
  reason    String?
  createdAt DateTime @default(now())

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
  @@index([guildId, userId])
}

model WvAllowedRole {
  id        String   @id @default(uuid())
  guildId   String
  roleId    String
  addedBy   String
  createdAt DateTime @default(now())

  @@unique([guildId, roleId])
  @@index([guildId])
}

model ModMailSettings {
  id              String   @id @default(uuid())
  guildId         String   @unique
  categoryId      String?  // "ModMail Tickets" category
  closedCategoryId String? // "Closed Tickets" category
  logsChannelId   String?  // "Ticket Logs" channel
  staffRoleId     String?  // Role to mention/add
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([guildId])
}

model ModMailTicket {
  id              String   @id @default(uuid())
  guildId         String
  userId          String   // The user who opened the ticket
  channelId       String?  // The channel ID (null if PENDING)
  messageId       String?  // The ID of the initial "Open Ticket" embed message in DM
  status          TicketStatus @default(PENDING)
  createdAt       DateTime @default(now())
  closedAt        DateTime?
  closedBy        String?  // ID of staff who closed it
  staffClaimedBy  String?  // ID of staff who claimed it

  @@index([guildId])
  @@index([userId])
  @@index([channelId])
  @@index([status])
}

enum TicketStatus {
  PENDING
  OPEN
  CLAIMED
  CLOSED
}

model CountingSettings {
  id           String   @id @default(uuid())
  guildId      String   @unique
  channelId    String
  enabled      Boolean  @default(true)
  currentCount Int      @default(0)
  lastUserId   String?  // To prevent same user counting twice
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([guildId])
  @@index([channelId])
}

model CountingUserStats {
  id        String   @id @default(uuid())
  guildId   String
  userId    String
  counting  Int      @default(0) // Total successful counts
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
  @@index([guildId, counting])
}
